<%- include('../layout') %>

<div class="card p-3 shadow-sm">
    <h3 class="mb-3 text-center">✏️ Sửa sản phẩm</h3>
    <form action="/admin/edit/<%= product.id %>" method="POST" enctype="multipart/form-data" class="row g-2">
        <div class="col-md-6">
            <input type="text" name="name" value="<%= product.name %>" class="form-control" required>
        </div>
        <div class="col-md-3">
            <input type="number" name="price" value="<%= product.price %>" class="form-control" required>
        </div>
        <div class="col-md-3">
            <div>Ảnh hiện tại:</div>
            <img src="/uploads/<%= product.image %>" width="100" onerror="this.src='/uploads/default.jpg'"><br><br>
            <input type="file" name="image" class="form-control">
        </div>
        <div class="col-12 mt-2">
            <textarea name="description" class="form-control"><%= product.description %></textarea>
        </div>
        <div class="col-12 mt-2">
            <button class="btn btn-success">Cập nhật</button>
            <a href="/admin" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>
