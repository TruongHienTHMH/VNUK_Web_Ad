<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 80%;
            margin: 40px auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 12px 18px;
            border: 1px solid #ddd;
            text-align: center;
        }
        th {
            background: #007bff;
            color: #fff;
        }
        tr:nth-child(even) {
            background: #f9f9f9;
        }
    </style>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Width</th>
                <th>lenght</th>
                <th>Perimeter</th>
                <th>Area</th>
            </tr>
        </thead>
        <tbody>
            <% data_rectangle.forEach(function(rectangle) { %>
                <tr>
                    <td><%= rectangle.id %></td>
                    <td><%= rectangle.width %></td>
                    <td><%= rectangle.lenght %></td>
                    <td><%= rectangle.perimeter %></td>
                    <td><%= rectangle.area %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div style="text-align: center; margin-top: 20px;"></div>
        <a href="/" style="display: inline-block; padding: 10px 24px; background: #007bff; color: #fff; text-decoration: none; border-radius: 4px;">Quay lại trang chủ</a>
    </div>
    <!--  -->
</body>
</html>